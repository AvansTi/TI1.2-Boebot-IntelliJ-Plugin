<idea-plugin>
  <id>com.AvansTI.BoebotPlugin</id>
  <name>BoeBot plugin</name>
  <version>1.0</version>
  <vendor url="https://www.github.com/avansti">Avans TI, EtiÃ«nne Goossens &amp; Johan Talboom</vendor>

  <description><![CDATA[
      A small plugin to upload code to your BoeBot. This plugin is made to facilitate the course "Hardware Interfacing", and allows students to easily upload code to a raspberry pi based BoeBot<br>
    ]]></description>

  <change-notes><![CDATA[

    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
      <toolWindow id="Boebot Uploader" secondary="false" anchor="bottom" factoryClass="MyToolWindowFactory"/>
      <projectService serviceInterface="com.avans.boebotplugin.services.Settings" serviceImplementation="com.avans.boebotplugin.services.Settings"/>
      <projectConfigurable groupId="editor" instance="com.avans.boebotplugin.services.SettingsConfig" id="boebot.configGUI"/>
    <projectTemplate projectType="JAVA_MODULE" templatePath="resources/projectTemplates/Boebot_Application.zip" category="false" />
  </extensions>


  <actions>
    <group id="MyPlugin.SampleMenu" text="Boebot" description="BotBot actions menu">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action id="Myplugin.Textboxes" class="HelloAction" text="Upload to Boebot" description="Adds upload window"/>
      <action id="Myplugin.Textboxe2" class="HelloAction" text="Settings" description="Change settings for boebot uploading"/>
    </group>
  </actions>

</idea-plugin>